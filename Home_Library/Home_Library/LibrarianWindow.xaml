<Window x:Class="Home_Library.LibrarianWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Home_Library"
        mc:Ignorable="d"
        Title="Главная" Height="450" Width="800" Background="#FFD48D89">
    <Grid>
        <TabControl >
            <TabItem Header="Книги" BorderBrush="{x:Null}" Foreground="#FF373C3B" FontFamily="Cooper Black">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="listviewTovar" BorderBrush="{x:Null}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" ></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Image Width="200" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" Stretch="UniformToFill" Margin="10">
                                        <Image.Source>
                                            <Binding Path="book_photo">
                                                <Binding.TargetNullValue>
                                                    <ImageSource>./picture.png</ImageSource>
                                                </Binding.TargetNullValue>
                                            </Binding>
                                        </Image.Source>
                                    </Image>
                                    <StackPanel Width="auto"  Grid.Column="1">
                                        <TextBlock Text="{Binding book_name}"></TextBlock>
                                        <TextBlock Text="{Binding book_description}"></TextBlock>
                                        <TextBlock Text="{Binding book_produce_year}"></TextBlock>
                                    </StackPanel>
                                    <StackPanel Width="100"  Grid.Column="2">
                                        <TextBlock Text="{Binding book_amount}"></TextBlock>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>

            </TabItem>
            <TabItem Header="Читатели" BorderBrush="{x:Null}" Foreground="#FF373C3B" FontFamily="Cooper Black">
                <Grid Background="#FFE5E5E5">
                    <ListView x:Name="listviewChit" BorderBrush="{x:Null}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" ></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Width="100"  Grid.Column="2">
                                        <TextBlock Text="{Binding id_user}"></TextBlock>
                                    </StackPanel>
                                    <StackPanel Width="600"  Grid.Column="1">
                                        <TextBlock Text="{Binding name}"></TextBlock>
                                        <TextBlock Text="{Binding surname}"></TextBlock>
                                        <TextBlock Text="{Binding patronymic}"></TextBlock>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
